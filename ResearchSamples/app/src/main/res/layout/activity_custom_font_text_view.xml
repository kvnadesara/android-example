<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:digicorp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.digicorp.android.researchsamples.ex1.CustomFontTextViewActivity">

    <com.digicorp.components.TextView
        android:id="@+id/txtSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="a b c d e f g h i j k l m n o p q r s t u v w x y z"
        android:textColor="@android:color/holo_green_light"
        style="@android:style/TextAppearance.Medium"
        digicorp:asset_font_file_name="@string/image_font" />

    <com.digicorp.components.TextView
        android:id="@+id/txtCaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSmall"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="A B C D E F G H"
        android:textColor="@android:color/holo_blue_light"
        style="@android:style/TextAppearance.Medium"
        digicorp:asset_font_file_name="@string/image_font" />

</RelativeLayout>
